<body class="container">
<% include nav %>

    <h4 class="text-center p-5"> Nhập thông tin cần hỗ trợ</h4>
<form method="post" action="/support" enctype="application/x-www-form-urlencoded"><br><br>
    <div class="form-group">

        <label for="exampleInputEmail1">Email address</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Điền Email"><br>
    </div>
    <div class="form-group">
        <label for="phone">Enter a phone number:</label><br>
    <input type="tel" id="phone" name="phone" placeholder="123-45-678" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" ><br><br>
    <small>Format: 123-45-678</small><br><br>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Mô Tả tình huống</label>
        <textarea name="content"  class="form-control" id="exampleFormControlTextareal" rows="3"></textarea>
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<hr>
<form method="post" action="/delete" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="exampleInputEmail1">Địa chỉ email</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
               placeholder="Điền Email">

    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Delete</button>
</form>

